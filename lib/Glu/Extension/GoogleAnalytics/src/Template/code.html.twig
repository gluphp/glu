{% if env == 'prod' %}
	<!-- Global site tag (gtag.js) - Google Analytics -->
	<script async defer src="https://www.googletagmanager.com/gtag/js?id={{ id }}"></script>
	<script>
		window.dataLayer = window.dataLayer || [];
		function gtag(){dataLayer.push(arguments);}
		gtag('js', new Date());

		gtag('config', '{{ id }}');
	</script>
{% endif %}
